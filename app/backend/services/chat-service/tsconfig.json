{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@utils/*": ["utils/*"],
      "@configs/*": ["configs/*"],
      "@loaders/*": ["loaders/*"],
      "@routes/*": ["routes/*"],
      "@logger": ["logger"],
      "@controllers/*": ["controllers/*"],
      "@middlewares/*": ["middlewares/*"],
      "@services/*": ["services/*"],
      "@cassandra/*": ["cassandra/*"],
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [ "./src/**/*", "../../databases/cassandra/Repositories"]
}
