{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@configs/*": ["configs/*"],
      "@loaders/*": ["loaders/*"],
      "@socket/*": ["socket/*"],
      "@middlewares/*": ["middlewares/*"],
      "@utils/*": ["utils/*"],
      "@services/*": ["services/*"],
      "@logger": ["logger"],
      "@routes": ["routes/useRoutes"],
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [ "./src/**/*" ]
}
