{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "rootDir": "./",
    "moduleResolution": "node",
    "baseUrl": "./src",
    "paths": {
      "@loaders/*": ["loaders/*"],
      "@configs/*": ["configs/*"],
      "@routes": ["routes/useRoutes"],
      "@logger": ["logger"],
      "@services/*": ["services/*"],
      "@controllers/*": ["controllers/*"],
      "@middlewares/*": ["middlewares/*"]
    },
    "resolveJsonModule": true,
    "allowJs": true,
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": [ "./src/**/*" ]
}
